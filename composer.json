{
    "name": "paneedesign/api-bundle",
    "type": "symfony-bundle",
    "description": "Api management for Symfony3 projects.",
    "keywords": ["api", "oauth", "php"],
    "homepage": "http://www.paneedesign.com/",
    "license": "proprietary",
    "authors": [{
        "name": "Fabiano Roberto",
        "email": "fabiano@paneedesign.com"
    }],
    "require": {
        "php": "^5.6|^7.0",
        "symfony/framework-bundle": "^3.2",
        "friendsofsymfony/oauth-server-bundle": "^1.5",
        "adoy/oauth2": "^1.3",
        "nelmio/api-doc-bundle": "^3.0",
        "friendsofsymfony/rest-bundle": "^2.3",
        "jms/serializer-bundle": "^2.0"
    },
    "require-dev": {
        "phpspec/phpspec": "^3.2",
        "phpunit/phpunit": "^5.6",
        "symfony/security-bundle": "^3.2",
        "incenteev/composer-parameter-handler": "~2.0"
    },
    "config": {
        "bin-dir": "bin"
    },
    "autoload": {
        "psr-4": { "PaneeDesign\\ApiBundle\\": "" },
        "exclude-from-classmap": ["/Tests/"]
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "path",
            "url": "../../*/*"
        }
    ],
    "scripts": {
        "symfony-scripts": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters"
        ],
        "post-install-cmd": [
            "@symfony-scripts"
        ],
        "post-update-cmd": [
            "@symfony-scripts"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        },
        "incenteev-parameters": {
            "file": "Resources/config/parameters.yml"
        }
    }
}
